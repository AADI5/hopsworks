<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <servlet>
    <servlet-name>AppScriptServlet</servlet-name>
    <servlet-class>io.hops.hopsworks.web.servlet.AppScriptServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AppScriptServlet</servlet-name>
    <url-pattern>/zeppelin/scripts/scripts.6ddd912ca4c10818.js</url-pattern>
  </servlet-mapping>
  <session-config>
    <!-- on production systems you might have another value for the timeout -->
    <session-timeout>30</session-timeout>
    <!-- we don't want to use the default name JSESSIONID because this
    tells everyone (especially hackers) that our application is based on java -->
    <cookie-config>
      <name>SESSIONID</name>
      <path>/</path>
    </cookie-config>
  </session-config>
</web-app>
